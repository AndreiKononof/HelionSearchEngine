<?xml version="1.0" encoding="UTF-8" ?>
<databaseChangeLog xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
                   xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                   xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-latest.xsd">

    <changeSet id="create-author" author="KononovAI">
        <createTable tableName="site">
            <column name="id" type="int" autoIncrement="true">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="status" type="varchar(10)">
                <constraints nullable="false"/>
            </column>
            <column name="status_time" type="datetime">
                <constraints nullable="false"/>
            </column>
            <column name="last_error" type="TEXT">
                <constraints nullable="false"/>
            </column>
            <column name="url" type="VARCHAR(255)">
                <constraints nullable="false"/>
            </column>
            <column name="name" type="VARCHAR(255)">
                <constraints nullable="false"/>
            </column>
        </createTable>
        <createTable tableName="page">
            <column name="id" type="int" autoIncrement="true">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="site_id" type="int">
                <constraints nullable="false"/>
            </column>
            <column name="path" type="TEXT">
                <constraints nullable="false"/>
            </column>
            <column name="code" type="int">
                <constraints nullable="false"/>
            </column>
            <column name="content" type="MEDIUMTEXT">
                <constraints nullable="false"/>
            </column>
        </createTable>
        <createTable tableName="lemma">
            <column name="id" type="int" autoIncrement="true">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="site_id" type="int">
                <constraints nullable="false"/>
            </column>
            <column name="lemma" type="VARCHAR(255)">
                <constraints nullable="false"/>
            </column>
            <column name="frequency" type="int">
                <constraints nullable="false"/>
            </column>
        </createTable>
        <createTable tableName="index">
            <column name="id" type="int" autoIncrement="true">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="page_id" type="int">
                <constraints nullable="false"/>
            </column>
            <column name="lemma_id" type="int">
                <constraints nullable="false"/>
            </column>
            <column name="rank" type="FLOAT">
                <constraints nullable="false"/>
            </column>
        </createTable>
    </changeSet>
</databaseChangeLog>